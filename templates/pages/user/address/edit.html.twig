{% extends 'themes/base_user.html.twig' %}

{% block title %}Modifier cette adresses {% endblock %}

{% block description %}Modifier cette adresses{% endblock %}

{% block keywords %} adresse,utilisateur{% endblock %}

{% block main %}
    <h1 class="text-center display-5">Modifier cette adresses</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-8 mx-auto">
                {{ form_start(form) }}
                <div class="mb-3">
                    <label for="">Nom <span='text-danger'>*</span></label>
                    <div class='text-danger'>{{ form_errors(form.lastName) }}</div>
                    {{ form_widget(form.lastName, {'attr':{'class': 'form-control'} }) }}
                </div>
                <div class="mb-3">
                    <label for="">Prénom <span='text-danger'>*</span></label>
                    <div class='text-danger'>{{ form_errors(form.firstName) }}</div>
                    {{ form_widget(form.firstName, {'attr':{'class': 'form-control'} }) }}
                </div>
                 <div class="mb-3">
                    <label for="">Numéro de téléphone <span='text-danger'>*</span></label>
                    <div class='text-danger'>{{ form_errors(form.phone) }}</div>
                    {{ form_widget(form.phone, {'attr':{'class': 'form-control'} }) }}
                </div>
                <div class="mb-3">
                    <label for="">Rue <span='text-danger'>*</span></label>
                    <div class='text-danger'>{{ form_errors(form.street) }}</div>
                    {{ form_widget(form.street, {'attr':{'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
                 <div class="mb-3">
                    <label for="">Code postal <span='text-danger'>*</span></label>
                    <div class='text-danger'>{{ form_errors(form.postalCode) }}</div>
                    {{ form_widget(form.postalCode, {'attr':{'class': 'form-control'} }) }}
                </div>
                 <div class="mb-3">
                    <label for="">Ville <span='text-danger'>*</span></label>
                    <div class='text-danger'>{{ form_errors(form.city) }}</div>
                    {{ form_widget(form.city, {'attr':{'class': 'form-control'} }) }}
                </div>
                 <div class="mb-3">
                    <label for="">Pays<span='text-danger'>*</span></label>
                    <div class='text-danger'>{{ form_errors(form.country) }}</div>
                    {{ form_widget(form.country, {'attr':{'class': 'form-control'} }) }}
                </div>
                 <div class="mb-3">
                    <label for="">Quel mot clé souhaitez-vous associer a votre adresse?</label>
                    {{ form_widget(form.keyword, {'attr':{'class': 'form-control'} }) }}
                </div>
                 <div class="mb-3">
                    <label for="">Information complémentaire(Batiment,Immeuble, Etages...)</label>
                    {{ form_widget(form.details, {'attr':{'class': 'form-control'} }) }}
                </div>
                <div class="">
                    <input formnovalidate type="submit" class='btn btn-primary'>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

    </div>
   
{% endblock %}